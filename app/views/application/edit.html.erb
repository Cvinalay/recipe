<h2>Edit Recipe</h2>


<form action="/update_recipe/<%= @recipes.id %>">
  <input type="text" name="title" placeholder="recipe" value="<%= @recipes.title%>">
  <input type="text" name="url" placeholder="url" value="<%= @recipes.url %>">
  <input type="text" name="ingredients" placeholder="ingredients" value="<%= @recipes.ingredients %>">
  <input type="text" name="steps" placeholder="steps" value="<%= @recipes.steps %>">
  <input type="submit">
</form>